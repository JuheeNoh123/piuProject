    <script src="/static/js/index.js"></script>
    <style>
        .hide {
            display: none;
        }
    </style>
</head>

<body>
    <div class="container">
        {{>header}}

        <div id="step4" class="">
            <hr>
            <div class="card">
                <h5 class="card-title">주문 조회</h5>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="usr">주문자명:</label>
                            <input type="text" class="form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label for="usr">주문번호:</label>
                            <input type="text" class="form-control" id="ordercode">
                        </div>
                        <div class="form-group">
                            <label for="usr">비밀번호:</label>
                            <input type="password" class="form-control" id="pwd">
                        </div>
                        <button type="button" class="btn btn-primary" id="btn-order">변경하기</button>
                    </form>
                </div>
            </div>
            <br>
        </div>
    </div>
    <br>
    {{>footer}}
    <script src="/js/index.js"></script>
</body>

</html>